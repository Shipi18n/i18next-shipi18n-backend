{
  "name": "i18next-shipi18n-backend",
  "version": "1.0.0",
  "description": "i18next backend plugin for Shipi18n translation API - load and save translations dynamically",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "i18next",
    "i18next-backend",
    "shipi18n",
    "translation",
    "localization",
    "i18n",
    "internationalization"
  ],
  "author": "Shipi18n",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shipi18n/i18next-shipi18n-backend.git"
  },
  "homepage": "https://shipi18n.com",
  "bugs": {
    "url": "https://github.com/Shipi18n/i18next-shipi18n-backend/issues"
  },
  "peerDependencies": {
    "i18next": ">=19.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "i18next": "^23.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
